{
  "name": "apos-my-site",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx",
    "lint-fix": "npm run lint -- --fix",
    "start": "node app",
    "dev": "nodemon",
    "clean": "del-cli apos-build data public/apos-frontend",
    "build": "cross-env NODE_ENV=production node app @apostrophecms/asset:build",
    "serve": "cross-env NODE_ENV=production node app",
    "db-restore": "cross-env MONGODB_URI=mongodb://localhost/apos-my-site node scripts/db-restore"
  },
  "dependencies": {
    "apostrophe": "https://github.com/zenflow/apostrophe/tarball/zenflow-v1",
    "cross-env": "^7.0.3",
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "@cdxoo/mongodb-restore": "^1.1.2",
    "del-cli": "^4.0.1",
    "eslint": "^7.16.0",
    "eslint-config-zenflow": "^3.0.0",
    "nodemon": "^2.0.7"
  },
  "prettier": {
    "printWidth": 100,
    "trailingComma": "all"
  },
  "nodemonConfig": {
    "delay": 1000,
    "silent": true,
    "watch": [
      "./app.js",
      "./{lib,modules,views}/**/*"
    ],
    "ext": "json, js, html, scss, vue"
  }
}
